---
export interface Props {
	instance: string;
	desciption: string;
	thumbnail: string;
	href: string;
}

const { href, instance, body, thumbnail, desciption } = Astro.props;
---

<div class="bg-indigo-800 text-cyan-300 p-1 flex flex-col rounded-md border-2 border-solid border-stone-500 space-y-2">
	<div><img src={thumbnail} class="rounded-md" height="630"/></div>
	<div>
		<p class="font-bold text-lg">{instance}</p>
		<p>{desciption}</p>
		<br/>
		<a href={href} class="p-3 bg-sky-400 text-gray-100 rounded-md font-bold" target="_blank">Visit Instance</a>
		<br /> <br />
	</div>
</div>