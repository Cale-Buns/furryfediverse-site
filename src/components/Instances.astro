---
export interface Props {
	instance: string;
	desciption: string;
	thumbnail: string;
	href: string;
}

const { href, instance, body, thumbnail, desciption } = Astro.props;
---

<div class="bg-indigo-800 text-cyan-300 p-1 flex flex-col rounded-md border-2 border-solid border-stone-500 space-y-2">
	<div><img src={thumbnail} class="rounded-md" height="630" style="height: 200px; width: 100%; object-fit: cover;"/></div>
	<div class="flex flex-col justify-between h-full">
		<p class="font-bold text-lg mx-4">{instance}</p>
		<p class="mx-4">{desciption}</p>
		<a href={href} class="p-3 mt-5 bg-sky-400 text-gray-100 rounded-md font-bold" target="_blank">Visit Instance</a>
	</div>
</div>
